                                "scope": [
                                    "core",
                                    "mission"
                                ]
                            },
                            {
                                "name": "Subscription Owner No Network Write",
                                "scope": [
                                    "core",
                                    "mission"
                                ]
                            },
                            {
                                "name": "Application Owners (DevOps)",
                                "scope": [
                                    "core",
                                    "mission"
                                ]
                            }
                        ]
                    }
                ]
            } 
        },
